<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
  </head>
  <body>
    <h1>R.E.I.M.E APP</h1>
    <h2>Real Estate Investing Made Easy for Beginner Investors</h2>

    <% if (bids.length > 0) { %>
    <div class="col-sm-6">
      <h3>Your Bids</h3>
      <ul class="bids">
      <% for(var i=0; i<bids.length; i++) {%>
        <%
          var listing = listings.find(document => {
            return document._id + "" === bids[i].listingId + ""
          })
        %>
        <li id="<%= bids[0]._id %>" class="bid">
          <a href="/listing/<%= listing._id %>">
            <span><%= `${listing.Address} ${listing.City}, ${listing.State}` %></span>
          </a>
          <span><%= bids[i].amount %></span>
          <span><i class="fa fa-pen" aria-hidden="true"></i></span>
          <span><i class="fa fa-trash" aria-hidden="true"></i></span>
        </li>
      <% } %>
      </ul>
    </div>
    <% } %>

    <div class="col-sm-6">
      <h3>Listings</h3>
      <ul class="listings">
      <% for(var i=0; i<listings.length; i++) { %>
        <a href="/listing/<%= listings[i]._id %>">
          <li class="listing">
            <span><%= listings[i].Address %></span>
            <span><%= `${listings[i].City}, ${listings[i].State}` %></span>
            <img src="<%= listings[i].img %>">
          </li>
        </a>
      <% } %>
      </ul>
    </div>
  <script src="js/main.js"></script>
  </body>
</html>
